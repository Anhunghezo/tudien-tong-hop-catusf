    "version": "0.2.0",
    "configurations": [
        {
            "type": "rdbg",
            "name": "Debug current file with rdbg",
            "request": "launch",
            "script": "${file}",
            "args":  ["--from-lang",
            "Vietnamese",
            "--to-lang Vietnamese",
            "--output", 
            "./ext-output/lingvo/Wikipedia.dsl",
            "./ext-dict/Wikipedia.tab"],
            
            "askParameters": false
        },
        {
            "type": "rdbg",
            "name": "Attach with rdbg",
            "request": "attach"
        }
    ]
}